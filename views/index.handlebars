<h1>Cowboy Burger Menu</h1>

<div class="container animated zoomInLeft delay-0s">
  <div class="row">
    <div class="col-12 col-lg">
      <h2 style="color:orange;">To Be Delivered:</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}

        <li>
          <p>
            Order: {{this.id}}. <strong style="color: red;">{{this.burger_name}}</strong> <br>For: <strong
              style="color:red;">{{this.user.username}}</strong>

            <button data-burgerid="{{this.id}}" class="devourburger btn btn-primary">Deliver Order!</button>
          </p>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-12 col-lg">
      <h2 style="color:green;">Delivered:</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          <p>
            Order: {{this.id}}. <strong style="color:red;">{{this.burger_name}}</strong> <br>For: <strong
              style="color:red;">{{this.user.username}}</strong>

            <button data-burgerid="{{this.id}}" class="deleteburger btn btn-primary">Order Complete!</button>
          </p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg">
      <h2 class="animated zoomIn delay-0s" style="color:orange;">Create a Burger Order:</h2>
      <form id="createburger" class="button-size animated zoomInRight delay-0s">
        <textarea type="text" name="burger" required placeholder="enter burger order"></textarea>
        <input type="text" name="username" required placeholder="enter customer name"></textarea>
        <button type="submit" class="btn btn-danger">Create Order!</button>
      </form>

      <h2 class="animated zoomIn delay-0s" style="color:orange">Update a Burger Order:</h2>
      <form id="updateburger" class="button-size animated zoomInLeft delay-0s">
        <select name="id">
          {{#each burgers}}
          {{#unless devoured}}
          <option value="{{this.id}}">Order: {{this.id}} {{this.burger_name}}</option>
          {{/unless}}
          {{/each}}
        </select>
        <textarea type="text" name="burger" placeholder="enter order changes"></textarea>
        <button type="submit" class="btn btn-warning">Update Order!</button>
      </form>
    </div>
    <div class="col-12 col-lg">
      <img src="/assets/img/burger3.png" alt="no burger here" height="250px">
    </div>
  </div>
</div>

